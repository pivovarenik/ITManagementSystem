<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" styleClass="background" stylesheets="@../css/AuthStyles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controllers.ConfirmRegistrationController">
   <children>
      <AnchorPane fx:id="mainCard" layoutX="126.0" layoutY="71.0" prefHeight="567.0" prefWidth="954.0" styleClass="loginCard">
         <children>
            <Label fx:id="label" layoutX="144.0" layoutY="31.0" prefHeight="44.0" prefWidth="648.0" styleClass="label" stylesheets="@../css/AuthStyles.css" text="Установите свою картинку профиля" textAlignment="CENTER">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
               <font>
                  <Font name="Century Gothic Bold" size="32.0" />
               </font>
            </Label>
            <ImageView fx:id="profilePic" fitHeight="216.0" fitWidth="163.0" layoutX="394.0" layoutY="101.0" pickOnBounds="true" preserveRatio="true" styleClass="pic">
               <image>
                  <Image url="@../images/baseIcon.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
            <TextField fx:id="phoneField" layoutX="282.0" layoutY="409.0" prefHeight="37.0" prefWidth="400.0" promptText="+375(XX)XXXXXXX" styleClass="text-field" />
            <Label fx:id="phoneLabel" layoutX="283.0" layoutY="353.0" text="Ваш рабочий телефон">
               <font>
                  <Font name="Century Gothic" size="34.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </Label>
            <Button fx:id="logButton" layoutX="388.0" layoutY="470.0" mnemonicParsing="false" text="Войти">
               <font>
                  <Font name="Century Gothic Bold" size="22.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </AnchorPane>
      <ImageView fx:id="arrowBack" fitHeight="61.0" fitWidth="46.0" layoutX="24.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true" styleClass="pic">
         <image>
            <Image url="@../images/arrow_back.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
   </children>
</AnchorPane>
